<div class="wrapper">
    <main>
        <figure class="caseStudyLogo"><%= image_tag(@project.logo.url) %></figure>
        <h1><%= @project.title %></h1>
        <% if user_signed_in? %>
            <h3><%= link_to "EDIT", edit_project_path(@project) %></h3>
        <% end %>
        <h2>Challenge</h2>
        <p><%= raw @project.challenge %></p>
        <h2>Insight</h2>
        <p><%= raw @project.insight %></p>
        <figure><img src="<%= @project.main_image.url %>" alt=""></figure>
        <h2>Solution</h2>
        <p><%= raw @project.solution %></p>
        <div class="results">
            <h2>Results</h2>
            <p><%= raw @project.results %></p>
        </div>
        <img src="<%= @project.side_image1 %>" alt="<%= @project.side_image1 %>" class="side">
        <img src="<%= @project.side_image2 %>" alt="<%= @project.side_image2 %>" class="side">
    </main>
    <aside>
        <blockquote><%= raw @project.quote %><cite><%= raw @project.cite %></cite></blockquote>
        <div class="categories">
            <%= render 'categorySection' %>
        </div>
        <div class="skills">
            <%= render 'skills' %>
        </div>
        <div class="process">
            <h2>Strategic Process</h2>
            <p>Read how Current360 will apply a proven methodology to your project.</p>
            <a href="<%= strategy_path %>" class="button">C360 Strategy</a>
        </div>
    </aside>
</div>