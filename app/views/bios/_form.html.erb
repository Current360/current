  <%= bio.label :real_title %>
  <%= bio.text_field :real_title %><br>
  <%= bio.label :funny_title %>
  <%= bio.text_field :funny_title %><br>
  <%= bio.label :overview %>
  <%= bio.text_area :overview %><br>
  <h2>Questions</h2>
  <%= bio.label :question1 %>
  <%= bio.text_field :question1 %><br>
  <%= bio.label :answer1 %>
  <%= bio.text_field :answer1 %><br>
  <%= bio.label :question2 %>
