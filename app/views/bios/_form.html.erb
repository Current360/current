  <%= bio.label :question5 %>
  <%= bio.text_field :question5 %><br>
  <%= bio.label :answer5 %>
  <%= bio.text_field :answer5 %><br>
  <h2>Skills</h2>
  <p>Enter 1-9 for skill value.</p>
  <%= bio.label :skill1 %>
  <%= bio.text_field :skill1 %><br>
  <%= bio.label :skill1_value %>
  <%= bio.text_field :skill1_value %><br>
  <%= bio.label :skill2 %>
