<div class="wrapper">
    <main>
        <h1>Welcome to Master Control</h1>
        <h2>Don't Fuck it up!</h2>

        <div class="column">
            <h2>Blogs</h2>
            <h4><%= link_to "Add A Blog", new_blog_path %></h4>
            <ol>
                <% @blogs.each do |blog| %>
                    <li><%= link_to blog.title, edit_blog_path(blog) %></li>
                <% end %>
            </ol>
            <br>
            <%= will_paginate @blogs %>
        </div>
        <div class="column">
            <h2>Bios</h2>
            <h4><%= link_to "Add A Bio", new_bio_path %></h4>
            <ol>
                <% @bios.each do |bio| %>
                    <li><%= link_to bio.first_name, edit_bio_path(bio) %></li>
                <% end %>
            </ol>
        </div>
        <div class="column">
            <h2>Work</h2>
            <h4><%= link_to "Add A Case Study", new_project_path %></h4>
            <ol>
                <% @projects.each do |project| %>
                    <li><%= link_to project.title, edit_project_path(project) %></li>
                <% end %>
            </ol>
            <h2>Home Page Quotes</h2>
            <h4><%= link_to "Add A Quote", new_quote_path %></h4>
            <ol>
                <% @quotes.each do |quote| %>
                    <li><%= link_to quote.cite, edit_quote_path(quote) %></li>
                <% end %>
            </ol>
        </div>
    </main>
</div>